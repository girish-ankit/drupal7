/**
* Implements hook_flush_caches().
*/
function custom_cache_flush_caches() {
  return array('cache_custom');
}


/**
* global function to set cache
*/

function cache_setter_getter($cid, $data) {


    if($cache = cache_get($cid, 'cache_custom')) {
      $data = 'cache: '.$cache->data;
    }
    else {
       cache_set($cid, $data, 'cache_custom');
    }

  return $data;
}



