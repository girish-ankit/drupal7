/**
*@file
* This file is created to show custom pager creation in drupal.
* 
*/





/**
* Implementation of hook_perm()
*
*/

function custom_jquery_permission()
{
	return array('jquery test page' => array('title'=> t('Jquery Test page permission title'), 'description'=> t('This is description of jquery test page permission title')));
}
/**
* Implementation of hook_menu()
*/



function custom_jquery_menu()
{
	$items = array();
	$items['custom-jquery'] = array(
                          'title' => t('Custom Jquery'),
		          'page callback' => 'custom_jquery_data',
		          'access arguments' => array('jquery test page'),
		          'type' =>MENU_NORMAL_ITEM,
		                  );

	
	
	
	return $items;
}


function custom_jquery_data()
{
 
  drupal_add_js(array('ankit' => array('tax_rate' => '0.06')), 'setting');

$output = '';

$output .= '<h3 class="slider-trigger-1">Slider Trigger</h3>';
$output .= '<div class="slider-1">This is my slider text. This text will automatically expand when the Slider Trigger is clicked</div>';

$output .= '<h3 class="slider-trigger-2">Slider Trigger</h3>';
$output .= '<div class="slider-2">This is my slider text. This text will automatically expand when the Slider Trigger is clicked</div>';
return $output;


 

}



